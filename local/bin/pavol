#!/bin/bash

function get_default_sink () {
    pactl info | grep "^Default Sink:" | cut -c15-
}

action=$1

sink=$(get_default_sink)
case $action in
    down)
	pactl set-sink-volume $sink -2%
	;;
    up)
	pactl set-sink-volume $sink +2%
	;;
    mute)
	pactl set-sink-mute $sink toggle
	;;
    *)
	exit 1
	;;
esac
