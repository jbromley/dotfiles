#!/bin/bash

action="$1"
amount="${2:-0}"

case "${action}" in
init)
    pactl upload-sample /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga blip
    ;;
down)
    pactl set-sink-volume @DEFAULT_SINK@ -${amount}%
    ;;
up)
    pactl set-sink-volume @DEFAULT_SINK@ +${amount}%
    ;;
mute)
    pactl set-sink-mute @DEFAULT_SINK@ toggle
    ;;
mutemic)
    pactl set-source-mute @DEFAULT_SOURCE@ toggle
    ;;
*)
    exit 1
    ;;
esac
pactl play-sample blip
