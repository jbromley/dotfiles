#!/bin/sh
BREAK_CHARS="(){}[],^%$#@\"\";''|\\"
RLWRAP=
if [ $TERM == "dumb" ]; then  # slime
  RLWRAP=
else
  RLWRAP="rlwrap --remember --history-filename=$HOME/.sbcl_history --histsize=1000000 -c -b $BREAK_CHARS -f $HOME/.sbcl_completions"
fi

SBCL=$(which sbcl)
if [ $? != 0 ]; then
  echo "SBCL not found."
  exit 1
fi	

if [ $# -eq 0 ]; then
  exec $RLWRAP $SBCL
else # permits #!/usr/bin/env sbcl , but breaks sbcl --help, etc.
  exec  $SBCL --script $*
fi
