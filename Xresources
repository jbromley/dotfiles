!!! X Resource File

! Color theme
#include "/home/jay/.colors.xresources"

! Font defines
#define FONT_NAME Ubuntu Mono
#define FONT_STYLE Regular
#ifdef SRVR_dromedary
  #define FONT_SIZE 10
#else
  #define FONT_SIZE 12  
#endif

! XFT
#ifdef SRVR_dromedary
  Xft.dpi: 192
#else
  Xft.dpi: 96  
#endif
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Emacs
Emacs*font: FONT_NAME-FONT_SIZE
Emacs*menuBar: off
Emacs*toolBar: off
Emacs*verticalScrollBars: off

! Rxvt-unicode
URxvt.geometry: 120x40
! URxvt.depth: 32
URxvt*letterSpace: -1
URxvt*font: xft:FONT_NAME:style=FONT_STYLE:size=FONT_SIZE
URxvt*boldFont: xft:FONT_NAME:style=Bold:size=FONT_SIZE
URxvt*italicFont: xft:FONT_NAME:style=Italic:size=FONT_SIZE
URxvt*boldItalicFont: xft:FONT_NAME:style=Bold Italic:size=FONT_SIZE
URxvt*scrollBar: off
! URxvt*transparent: on
! URxvt*background: rgba:ffff/ffff/ffff/c0c0
! URxvt*tintColor: #ffffff
