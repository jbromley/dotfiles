! X Resrouces

! Rxvt Unicode
URxvt.font: xft:JetBrains Mono:style=Regular:size=10.0:antialias=true
URxvt.boldFont: xft:JetBrains Mono:style=Bold:size=10.0:antialias=true
URxvt.italicFont: xft:JetBrains Mono:style=Italic:size=10.0:antialias=true
URxvt.boldItalicFont: xft:JetBrains Mono:style=Bold Italic:size=10.0:antialias=true
URxvt.scrollBar: off

! XTerm
XTerm.termName: xterm-256color
XTerm.vt100.locale: false
XTerm.vt100.utf8: true
XTerm.vt100.scrollTtyOutput: false
XTerm.vt100.scrollKey: true
XTerm.vt100.bellIsUrgent: true
XTerm.vt100.metaSendsEscape: true

! XTerm Styling
XTerm.vt100.faceName: JetBrains Mono:style=Regular
XTerm.vt100.boldFont: JetBrains Mono:style=Bold
XTerm.vt100.boldMode: false
XTerm.vt100.faceSize: 10.0
XTerm.vt100.internalBorder: 4 
XTerm.borderWidth: 0

XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key>N: scroll-back(1, halfpage) \n\
    Ctrl Shift <Key>T: scroll-forw(1, halfpage) \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>H: set-altscreen(toggle) \n\
    Shift <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY) select-start() select-end()

