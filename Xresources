!!! X Resource File

! Font defines
#define FONT_NAME Ubuntu Mono
#define FONT_STYLE Regular
#define FONT_SIZE 12

! XFT
Xft.dpi: 96
! Xft.dpi: 192
! Xft.antialias: true
! Xft.hinting: true
! Xft.rgba: rgb
! Xft.autohint: true
! Xft.hintstyle: hintslight
! Xft.lcdfilter: lcddefault

! Emacs
Emacs*font: FONT_NAME-FONT_SIZE
Emacs*menuBar: off
Emacs*toolBar: off
Emacs*verticalScrollBars: off

! Rxvt-unicode
URxvt.geometry: 100x40
URxvt.depth: 32
URxvt*letterSpace: -1
URxvt*font: xft:FONT_NAME:style=FONT_STYLE:size=FONT_SIZE
URxvt*boldFont: xft:FONT_NAME:style=Bold:size=FONT_SIZE
URxvt*italicFont: xft:FONT_NAME:style=Italic:size=FONT_SIZE
URxvt*boldItalicFont: xft:FONT_NAME:style=Bold Italic:size=FONT_SIZE
URxvt*scrollBar: off

! rofi
rofi.modi:    window,run,drun,ssh
rofi.opacity: 90
rofi.width:   32
rofi.lines:   8
rofi.columns: 1
rofi.font:    Ubuntu Mono 16
rofi.color-enabled: true
rofi.color-normal: #000000, #808080, #000000, #101010, #ffffff
rofi.color-active: #000000, #008080, #000000, #202020, #ffffff
rofi.color-window: #000000, #0000ee, #0000ee
rofi.bw:      2
! Location on screen
rofi.location:                       0
! Use levenshtein sorting
rofi.levenshtein-sort:               true
! Set case-sensitivity
rofi.case-sensitive:                 false
! Enable sidebar-mode
rofi.sidebar-mode:                   false
! Row height (in chars)
rofi.eh:                             1
! Parse hosts file for ssh mode
rofi.parse-hosts:                    false
! Parse known_hosts file for ssh mode
rofi.parse-known-hosts:              true
! Do a more fuzzy matching
rofi.fuzzy:                          true
! Use glob matching
rofi.glob:                           false
! Tokenize input string
rofi.tokenize:                       true
! Monitor id to show on
rofi.m:                              -1
! Separator style (none, dash, solid)
rofi.separator-style:                none
! Hide scroll-bar
rofi.hide-scrollbar:                 false

