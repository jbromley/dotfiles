!!! X Resource File

! Font defines
#define FONT_NAME Ubuntu Mono
#define FONT_STYLE Regular
#define FONT_SIZE 12

! Color theme
#include "/home/jay/.Xresources.d/ocean_dark.colortheme"

! XFT
Xft.dpi: 96
! Xft.antialias: true
! Xft.hinting: true
! Xft.rgba: rgb
! Xft.autohint: true
! Xft.hintstyle: hintslight
! Xft.lcdfilter: lcddefault

! Emacs
Emacs*font: FONT_NAME-FONT_SIZE
Emacs*menuBar: off
Emacs*toolBar: off
Emacs*verticalScrollBars: off

! Rxvt-unicode
URxvt.geometry: 100x40
URxvt.depth: 32
URxvt*letterSpace: -1
URxvt*font: xft:FONT_NAME:size=FONT_SIZE:style=Regular
URxvt*boldFont: xft:FONT_NAME:size=FONT_SIZE:style=Bold
URxvt*italicFont: xft:FONT_NAME:size=FONT_SIZE:style=Italic
URxvt*boldItalicFont: xft:FONT_NAME:size=FONT_SIZE:style=Bold Italic
URxvt*scrollBar: off
URxvt.iconFile: /usr/share/icons/gnome/256x256/apps/utilities-terminal.png

! Rofi
rofi.font: FONT_NAME 8
rofi.terminal: urxvtc
rofi.fuzzy: true
