!!! X Resource File

! Font defines
#define FONT_NAME Ubuntu Mono
#define FONT_STYLE Regular
#define FONT_SIZE 12

! Color theme
#include "/home/jay/.Xresources.d/paraiso_dark.colortheme"

! XFT
Xft.dpi: 96
! Xft.antialias: true
! Xft.hinting: true
! Xft.rgba: rgb
! Xft.autohint: true
! Xft.hintstyle: hintslight
! Xft.lcdfilter: lcddefault

! Emacs
Emacs*font: FONT_NAME-FONT_SIZE
Emacs*menuBar: off
Emacs*toolBar: off
Emacs*verticalScrollBars: off

! Rxvt-unicode
URxvt.geometry: 100x40
URxvt.depth: 32
URxvt*letterSpace: -1
URxvt*font: xft:FONT_NAME:style=FONT_STYLE:size=FONT_SIZE
URxvt*boldFont: xft:FONT_NAME:style=Bold:size=FONT_SIZE
URxvt*italicFont: xft:FONT_NAME:style=Italic:size=FONT_SIZE
URxvt*boldItalicFont: xft:FONT_NAME:style=Bold Italic:size=FONT_SIZE
URxvt*scrollBar: off
