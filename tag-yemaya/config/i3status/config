general {
        colors = true
        interval = 5
        markup = "pango"
}

# order += "ipv6"
order += "wireless _first_"
# order += "ethernet _first_"
# order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "ðŸ›œ (%essid %quality) %ip"
        format_down = "ðŸ›œ down"
}

ethernet _first_ {
        format_up = "ðŸ–§  %ip"
        format_down = "ðŸ–§  down"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "/ %avail"
}

load {
        format = "Load %1min"
}

memory {
        format = "RAM %used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”Š <span foreground='#888888'>M %volume</span>"
        device = "default"
        mixer = "Master"
}

tztime local {
        format = "%a %b %_d %_I:%M %p"
}
