# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = "#0080FF"
    color_degraded = "#FFFF00"
    color_bad = "#FF8000"
    interval = 5
}

#order += "ipv6"
order += "disk /home/jay"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "battery 1"
order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: %essid %ip"
        format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery 0 {
        format = "%status:%percentage"
	status_chr = "âš‡"
	status_bat = "âš¡"
	status_full = "â˜»"
	low_threshold = 5
	threshold_type = percentage
	last_full_capacity = true
	hide_seconds = true
	integer_battery_capacity = true
}

battery 1 {
        format = "%status:%percentage"
	status_chr = "âš‡"
	status_bat = "âš¡"
	status_full = "â˜»"
	low_threshold = 5
	threshold_type = percentage
	last_full_capacity = true
	hide_seconds = true
	integer_battery_capacity = true
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/NetworkManager/nm-vpnc-*.pid"
}

tztime local {
    format = "%a, %b %d, %I:%M %p"
}

load {
    format = "Load: %1min %5min %15min"
}

disk /home/jay {
    format = "/home/jay: %avail free (%percentage_avail)"
    low_threshold = 2
    threshold_type = gbytes_avail
    prefix_type = binary
}

volume master {
       format = "ðŸ”Š %volume"
       format_muted = "ðŸ”‡ muted"
       device = "pulse"
       mixer = "Master"
       mixer_idx = 0
}

       